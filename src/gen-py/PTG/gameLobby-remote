import sys
import pprint
from urlparse import urlparse
from thrift.transport import TTransport
from thrift.transport import TSocket
from thrift.transport import THttpClient
from thrift.protocol import TBinaryProtocol

import gameLobby
from ttypes import *

if len(sys.argv) <= 1 or sys.argv[1] == '--help':
  print ''
  print 'Usage: ' + sys.argv[0] + ' [-h host:port] [-u url] [-f[ramed]] function [arg1 [arg2...]]'
  print ''
  print 'Functions:'
  print '  i32 registerPlayer(string playerName)'
  print '  void unregisterPlayer(i32 playerID)'
  print '   listGames()'
  print '  Game gameWithIndex(i32 gameIndex)'
  print '  i32 newGame(i32 playerID)'
  print '  bool requestToJoinGame(i32 gameIndex)'
  print '   getEvents(i32 sinceIndex)'
  print ''
  sys.exit(0)

pp = pprint.PrettyPrinter(indent = 2)
host = 'localhost'
port = 9090
uri = ''
framed = False
http = False
argi = 1

if sys.argv[argi] == '-h':
  parts = sys.argv[argi+1].split(':')
  host = parts[0]
  port = int(parts[1])
  argi += 2

if sys.argv[argi] == '-u':
  url = urlparse(sys.argv[argi+1])
  parts = url[1].split(':')
  host = parts[0]
  if len(parts) > 1:
    port = int(parts[1])
  else:
    port = 80
  uri = url[2]
  if url[4]:
    uri += '?%s' % url[4]
  http = True
  argi += 2

if sys.argv[argi] == '-f' or sys.argv[argi] == '-framed':
  framed = True
  argi += 1

cmd = sys.argv[argi]
args = sys.argv[argi+1:]

if http:
  transport = THttpClient.THttpClient(host, port, uri)
else:
  socket = TSocket.TSocket(host, port)
  if framed:
    transport = TTransport.TFramedTransport(socket)
  else:
    transport = TTransport.TBufferedTransport(socket)
protocol = TBinaryProtocol.TBinaryProtocol(transport)
client = gameLobby.Client(protocol)
transport.open()

if cmd == 'registerPlayer':
  if len(args) != 1:
    print 'registerPlayer requires 1 args'
    sys.exit(1)
  pp.pprint(client.registerPlayer(args[0],))

elif cmd == 'unregisterPlayer':
  if len(args) != 1:
    print 'unregisterPlayer requires 1 args'
    sys.exit(1)
  pp.pprint(client.unregisterPlayer(eval(args[0]),))

elif cmd == 'listGames':
  if len(args) != 0:
    print 'listGames requires 0 args'
    sys.exit(1)
  pp.pprint(client.listGames())

elif cmd == 'gameWithIndex':
  if len(args) != 1:
    print 'gameWithIndex requires 1 args'
    sys.exit(1)
  pp.pprint(client.gameWithIndex(eval(args[0]),))

elif cmd == 'newGame':
  if len(args) != 1:
    print 'newGame requires 1 args'
    sys.exit(1)
  pp.pprint(client.newGame(eval(args[0]),))

elif cmd == 'requestToJoinGame':
  if len(args) != 1:
    print 'requestToJoinGame requires 1 args'
    sys.exit(1)
  pp.pprint(client.requestToJoinGame(eval(args[0]),))

elif cmd == 'getEvents':
  if len(args) != 1:
    print 'getEvents requires 1 args'
    sys.exit(1)
  pp.pprint(client.getEvents(eval(args[0]),))

else:
  print 'Unrecognized method %s' % cmd
  sys.exit(1)

transport.close()
