  pp.pprint(client.GLgameWithID(eval(args[0]),))

elif cmd == 'GLnewGame':
  if len(args) != 2:
    print 'GLnewGame requires 2 args'
    sys.exit(1)
  pp.pprint(client.GLnewGame(eval(args[0]),args[1],))

elif cmd == 'GLrequestToJoinGame':
  if len(args) != 2:
    print 'GLrequestToJoinGame requires 2 args'
    sys.exit(1)
  pp.pprint(client.GLrequestToJoinGame(eval(args[0]),eval(args[1]),))

elif cmd == 'GLcancelGame':
  if len(args) != 2:
    print 'GLcancelGame requires 2 args'
    sys.exit(1)
  pp.pprint(client.GLcancelGame(eval(args[0]),eval(args[1]),))

elif cmd == 'GLgetPlayersInLobby':
  if len(args) != 0:
    print 'GLgetPlayersInLobby requires 0 args'
    sys.exit(1)
  pp.pprint(client.GLgetPlayersInLobby())

elif cmd == 'GLgetGames':
  if len(args) != 0:
    print 'GLgetGames requires 0 args'
    sys.exit(1)
  pp.pprint(client.GLgetGames())

elif cmd == 'GLgetPlayersInGame':
  if len(args) != 1:
    print 'GLgetPlayersInGame requires 1 args'
    sys.exit(1)
  pp.pprint(client.GLgetPlayersInGame(eval(args[0]),))

elif cmd == 'GLgetGame':
  if len(args) != 1:
    print 'GLgetGame requires 1 args'
    sys.exit(1)
  pp.pprint(client.GLgetGame(eval(args[0]),))

else:
